		<bean class="converters.RelationLikeToStringConverter" />
		<bean class="converters.StringToRelationLikeConverter" />
		
		<bean class="converters.SearchTemplateToStringConverter" />
		<bean class="converters.StringToSearchTemplateConverter" />
		
		<bean class="converters.UserAccountToStringConverter" />
		<bean class="converters.StringToUserAccountConverter" />
		
		<bean class="converters.SendersToStringConverter" />
		<bean class="converters.StringToSendersConverter" />
		
		<bean class="converters.AuthorityToStringConverter" />
		<bean class="converters.StringToAuthorityConverter" />
		
	</util:list>
	
</beans>