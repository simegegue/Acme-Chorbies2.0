		<bean class="converters.StringToActorConverter" />
		
		<bean class="converters.AdministratorToStringConverter" /> 
		<bean class="converters.StringToAdministratorConverter" />
		
		<bean class="converters.BannerToStringConverter" /> 
		<bean class="converters.StringToBannerConverter" />
		
		<bean class="converters.CacheTimeToStringConverter" /> 
		<bean class="converters.StringToCacheTimeConverter" />
		
		<bean class="converters.ChirpToStringConverter" /> 
		<bean class="converters.StringToChirpConverter" />
		
		<bean class="converters.ChorbiToStringConverter" /> 
		<bean class="converters.StringToChorbiConverter" />
		
		<bean class="converters.EventToStringConverter" /> 
		<bean class="converters.StringToEventConverter" />
		
		<bean class="converters.GenreToStringConverter" /> 
		<bean class="converters.StringToGenreConverter" />
		
		<bean class="converters.KindRelationshipToStringConverter" /> 
		<bean class="converters.StringToKindRelationshipConverter" />
		
		<bean class="converters.FeeToStringConverter" /> 
